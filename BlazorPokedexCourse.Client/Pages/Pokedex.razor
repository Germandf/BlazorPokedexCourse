@page "/"
@using BlazorPokedexCourse.Models
@using BlazorPokedexCourse.Services
@inject IPokeApiClient _pokeApiClient
<h3>Pokedex</h3>

@if(_pokemons is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div>
        @for (int i = 0; i < NumberOfRows; i++)
        {
            <div class="d-flex">
                @foreach (var pokemon in _pokemons.Skip(i * 6).Take(6))
                {
                    <div class="card pokeCard mb-4 bg-@(pokemon.Types.FirstOrDefault()!.PokemonType.Name)">
                        <div class="card-body">
                            <h4 class="card-title">@pokemon.Name</h4>
                            <img src="@pokemon.Sprite.Front" class="img-fluid" alt="@pokemon.Name" />
                        </div>
                    </div>
                }
            </div>
        }
    </div>
}

@code {

    private IEnumerable<Pokemon> _pokemons;
    public int NumberOfRows { get; set; } = 5;

    protected override async Task OnInitializedAsync()
    {
        _pokemons = await _pokeApiClient.GetAllPokemons();
    }

}
